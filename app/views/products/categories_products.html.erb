<h1 class="merchant"><%= @merchant.user_name %></h1>
<h2 class="">Products</h2>


<% @products.each do |product| %>
  <p class="product-detail-listing">
    <%=image_tag("#{product.image_url}")%>
    <strong>Product ID:</strong> <%= product.id %><br>
    <%= link_to product.name, product_path(product.id) %><br>
    <%= product.price_in_dollars %>
  </p>  
<%end%>