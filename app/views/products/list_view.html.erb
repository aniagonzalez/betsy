<h1 class="merchant"><%= @user.name %></h1>
<h2 class="">Products</h2>

<% products = Product.where(vendor_id: @user.id) %>

<% products.each do |product| %>
	<p class="product-detail-listing">
		<strong>Product ID:</strong> <%= product.id %><br>
		<%= product.name.capitalize %><br>
		<%= product.price %>
		
		<% if @current_user.id == product.user_id %>

			<% # this currently uses edit/update functionality as written and should be refactored. %>
			<%= link_to "Remove from Display?", product_path(product.id) %>

    <% end %>
	</p>	
<%end%>