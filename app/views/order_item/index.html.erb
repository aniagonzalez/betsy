<%= params %> </br>
<h1>
  YOUR CART OF AWESOME WAREZ
</h1>
<i class="fa fa-shopping-cart" aria-hidden="true"></i>
  <ul>
    <% total = 0 %>
    <% @order_items.each do |item| %>
      <% product = Product.find(item.product_id) %>
      <li>
        <%= product.name %>
        <ul>
          <li>Price: $<%= product.price_in_dollars %></li>
          <li>Quantity: <%= item.quantity %>
            <% if product.quantity > 1 %>
              <%= form_for(item, url: update_cart_path(item.id), method: :patch) do |f| %>
                <%= f.label "Change Quantity" %>
                <%= f.select(:quantity, options_for_select((1..product.quantity)), include_blank: true) %>
                <%= f.submit "Update" %>
              <% end %>
            <% else %>
              (Only 1 left in stock!)
            <% end %>
          </li>
          <li><%= link_to "Remove This Item", {:controller => :order_item, :action => 'destroy', :id => item.id}, method: :delete %></li>
        </ul>
      </li>
      <% total += (product.price_in_dollars * item.quantity) %>
    <% end %>
  </ul>

  <p>Total: $<%= total %></p>

<i class="fa fa-money" aria-hidden="true"></i><i class="fa fa-credit-card" aria-hidden="true"></i>
<!-- link here to checkout and enter billing info -->
<%= link_to "Proceed To Give Us Money", billings_path %><br>


<%= link_to "Back To Shop", products_path %>
